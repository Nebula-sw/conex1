<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewReciev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patch_date"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewReciev"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/default_ip" />

    <EditText
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portText"
        android:layout_alignStart="@+id/portText"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/portText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressText"
        android:layout_alignStart="@+id/addressText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/default_port" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonConnect"
        android:layout_alignEnd="@+id/messageText"
        android:layout_alignBottom="@+id/buttonConnect"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-78dp"
        android:background="#008577"
        android:onClick="onClickNew"
        android:text="@string/button_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageText"
        android:layout_alignStart="@+id/messageText"
        android:layout_marginTop="13dp"
        android:background="#008577"
        android:text="@string/button_connect"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>
